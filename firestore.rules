
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Collection Rules ---

    // Users: Admins can R/W all. Users can R/W their own doc.
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Watchlist: Users can R/W their own items.
    match /watchlist/{document=**} {
      allow read, list: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Alerts: Users can R/W their own alerts.
    match /alerts/{document=**} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Trade Journal: Users can R/W their own entries
    match /trade_journal/{document=**} {
      allow read, list, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // News Feed: Public read, admin write.
    match /news_feed/{document=**} {
      allow read;
      allow write: if isAdmin();
    }
    
    // Scanners: Public read, admin write.
    match /scanners/{document=**} {
        allow read;
        allow write: if isAdmin();
    }
    
    // Data Sources: Admin only.
    match /data_sources/{document=**} {
        allow read, write: if isAdmin();
    }
    
    // Feature Flags: Public read, admin write.
    match /feature_flags/{document=**} {
        allow read;
        allow write: if isAdmin();
    }

    // Prompts: Admin only.
    match /prompts/{document=**} {
        allow read, write: if isAdmin();
    }
    
    // Logs & Test Writes: Admin only.
    match /logs/{document=**} {
        allow read, write: if isAdmin();
    }
    match /test_writes/{document=**} {
        allow read, write: if isAdmin();
    }
  }
}
