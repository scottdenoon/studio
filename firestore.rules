rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Users can only read/write their own watchlist items
    match /watchlist/{docId} {
        allow read, delete: if resource.data.userId == request.auth.uid;
        allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Allow any authenticated user to manage news and prompts
    match /news_feed/{docId} {
        allow read, write: if request.auth != null;
    }

    match /prompts/{docId} {
        allow read, write: if request.auth != null;
    }
  }
}
