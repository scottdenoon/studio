
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Publicly readable collections
    match /news_feed/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Logged-in users can write
    }
    
    match /scanners/{docId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /feature_flags/{docId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User-specific data
    match /users/{userId} {
      // Admins can list all users for the management console
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // A user can read/write their own document
      allow read, write: if request.auth.uid == userId;
      // An admin can read any individual user document
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /watchlist/{docId} {
      allow read, write, delete: if request.resource.data.userId == request.auth.uid;
    }
    
    match /alerts/{docId} {
      allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    // Admin-only collections
    match /prompts/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /logs/{docId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /test_writes/{docId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /data_sources/{docId} {
       allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
