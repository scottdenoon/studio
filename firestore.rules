
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, but not write to it.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; 
    }

    // Any authenticated user can read the news feed.
    // Only admins can create/update/delete news.
    match /news_feed/{newsId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read/write their own watchlist items.
    match /watchlist/{itemId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // Users can only read/write their own alerts.
    match /alerts/{alertId} {
       allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Only admins can update prompts. Any authenticated user can read them.
    match /prompts/{promptId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
