
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to read all user profiles
    match /users/{userId} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Authenticated users can manage their own watchlist items
    match /watchlist/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow read access to news feed and prompts for all users
    match /news_feed/{document=**} {
      allow read: if true;
    }
    match /prompts/{document=**} {
      allow read: if true;
    }

    // Allow admins to write to news feed and prompts
    match /news_feed/{document=**} {
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /prompts/{document=**} {
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
