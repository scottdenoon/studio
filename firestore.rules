rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read their own profile, but any authenticated user can create a profile (sign up).
    // Admins can read all user profiles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == userId;
    }

    // Users can read and write to their own watchlist.
    match /watchlist/{documentId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Anyone can read the news feed, but only authenticated users can write to it.
    // In a production app, you would likely restrict writes to admins.
    match /news_feed/{documentId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Prompts can be read by anyone, but only written to by authenticated users (admins).
    match /prompts/{documentId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
