
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- User Profiles ---
    // Allow users to read their own profile.
    // Allow authenticated users to create their profile.
    // Admins can read/write any user profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if isAuthenticated();
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Watchlist ---
    // Users can read/write/delete items in their own watchlist.
    match /watchlist/{docId} {
      allow read, write, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
    }

    // --- Trade Journal ---
    // Users can manage their own trade journal entries.
    match /trade_journal/{docId} {
        allow read, write, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
    }

    // --- News Feed ---
    // Any authenticated user can read the news feed.
    // Only admins can create/update/delete news items.
    match /news_feed/{docId} {
      allow read: if isAuthenticated();
      allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // --- Data Sources, Scanners, Feature Flags, Prompts ---
    // Only admins can read or write these configuration collections.
    match /(data_sources|scanners|feature_flags|prompts)/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // --- Logs ---
    // No client access to logs. They are created server-side with admin credentials.
    match /logs/{docId} {
        allow read, write: if false;
    }

    // --- Test Writes & Alerts ---
    // These collections should only be written to, not read from by clients.
    // Writing is handled by server-side logic.
    match /(test_writes|alerts)/{docId} {
        allow read: if false;
        allow write: if isAuthenticated();
    }
  }
}
