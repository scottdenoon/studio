rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can read all user profiles, and perform list queries.
      // Individual users can only read their own profile.
      allow read: if request.auth.uid == userId || isAdmin();
      
      // Admins can write to any user profile.
      // Individual users can only write to their own profile.
      allow write: if request.auth.uid == userId || isAdmin();
    }

    match /watchlist/{document=**} {
        // Users can only read/write their own watchlist items
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    match /alerts/{document=**} {
        // Users can only read/write their own alerts
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    // --- Public Read, Admin Write Collections ---
    match /news_feed/{document=**} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }

    match /scanners/{document=**} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }
    
    match /data_sources/{document=**} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }

    match /feature_flags/{document=**} {
        allow get: if true;
        allow list: if true;
        allow write: if isAdmin();
    }

    // --- Admin Only Collections ---
    match /prompts/{document=**} {
        allow read, write: if isAdmin();
    }

    match /logs/{document=**} {
        allow read, write: if isAdmin();
    }

    match /test_writes/{document=**} {
        allow read, write: if isAdmin();
    }
  }
}
