rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read and write for any authenticated user.
    // This is a permissive rule for development to ensure functionality.
    // For production, you would want to add more specific rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
