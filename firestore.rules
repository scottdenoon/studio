rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow any authenticated user to read the list of users.
      // This is required for the admin user management page to function.
      allow read: if request.auth != null;

      // Users cannot write to their own or other's profiles directly.
      // This prevents a user from changing their own role.
      // Role management should be handled by a secure backend process if needed.
      allow write: if false;
    }

    match /news_feed/{newsId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /watchlist/{itemId} {
      allow read, write: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    match /prompts/{promptId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /alerts/{alertId} {
       allow read, write: if request.auth.uid == resource.data.userId;
       allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
